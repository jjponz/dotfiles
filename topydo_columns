[Citas]
title = Citas
filterexpr = +citas
sortexpr = due,text
groupexpr = due

[all]
title = Todo
groupexpr = project
sortexpr = importance
filterexpr = -+citas -due: -+compras_chinos -+warehouse_management -+access

[Rutina]
title = Rutina
filterexpr = +rutina
groupexpr = due

[Overdue]
title = Overdue
filterexpr = due:<today -+rutina
groupexpr = due
sortexpr = due,desc:priority,project,desc:context

[Today]
title = Today
filterexpr = due:today -+rutina
groupexpr = due
sortexpr = project,importance

[Future]
title = Futuras
groupexpr = due
filterexpr = due:>today -+rutina
sortexpr = due,desc:priority,project,desc:context

[warehouse_management]
title = Warehouse Management
groupexpr = context
sortexpr = importance
filterexpr = +warehouse_management
